      <section>
        <div class="container">

          <div class="row">

            <!-- LOGIN -->
            <div class="col-md-6 col-sm-6">

              <!-- login form -->


              <form action="#" method="post" class="sky-form boxed">
              <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= f.error_notification %>
               <header class="size-18 margin-bottom-20">
                  Changer de mot de passe
                </header>
                <fieldset class="nomargin form-inputs">

                   <%= f.input :email, required: true, autofocus: true %>

                </fieldset>

                  <footer>
                 <%= f.button :submit, "Recevoir les instructions" %>
                </footer>
              <% end %>
              </form>
            </div>

      <div class="col-md-6 col-sm-6">
              <form action="#" method="post" class="sky-form boxed">

                <header class="size-18 margin-bottom-20">
                  Perdu?
                </header>

                <fieldset class="nomargin">

                  <div class="row">

                    <div class="col-md-8 col-md-offset-2">

                    <span>Déjà inscrit?  <a href="../../users/sign_in"><strong>Cliquer ici!</strong></a></span><br>

                    <span>Pas encore inscrit? <a href="../../users/sign_up"><strong>Cliquer ici!</strong></a></span>

                    </div>
                  </div>

                </fieldset>



              </form>

            </div>
