<section class="page-header">
        <div class="container">
          <h1>S'INSCRIRE</h1>
        </div>
</section>
      <!-- /PAGE HEADER -->
      <!-- -->
      <section>
        <div class="container">

          <div class="row">

            <!-- LOGIN -->
            <div class="col-md-6 col-sm-6">

              <!-- login form -->


              <form action="/users" method="post" class="sky-form boxed">
              <%= simple_form_for(resource, as: resource_name, url: user_registration_path(resource_name) ) do |f| %>
              <%= f.error_notification %>
               <header class="size-18 margin-bottom-20">
                  S'inscrire
                </header>
                <fieldset class="nomargin form-inputs">

                  <%= f.input :email, required: true, autofocus: true, placeholder: "Email" %>


                    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                    <%= f.input :password_confirmation, required: true %>





                  <footer>
                 <%= f.button :submit, "Sign up", class: "btn btn-primary noradius pull-right" %>
                </footer>
              <% end %>
              </fieldset>
              </form>
              <!-- /login form -->


            </div>
            <!-- /LOGIN -->

            <!-- SOCIAL LOGIN -->
            <div class="col-md-6 col-sm-6">
              <form action="#" method="post" class="sky-form boxed">

                <header class="size-18 margin-bottom-20">
                  S'inscrire via un réseau social
                </header>

                <fieldset class="nomargin">

                  <div class="row">

                    <div class="col-md-8 col-md-offset-2">

                      <a class="btn btn-block btn-social btn-facebook margin-bottom-10" href="../users/auth/facebook">
                        <i class="fa fa-facebook"></i> Sign in with Facebook
                      </a>

                      <a class="btn btn-block btn-social btn-twitter margin-bottom-10" href="../users/auth/twitter">
                        <i class="fa fa-twitter"></i> Sign in with Twitter
                      </a>

                      <a class="btn btn-block btn-social btn-google margin-bottom-10">
                        <i class="fa fa-google-plus"></i> Sign in with Google
                      </a>

                    </div>
                  </div>

                </fieldset>

                <footer>
                  Déjà inscrit? <a href="../users/sign_in"><strong>Cliquer ici!</strong></a>
                </footer>

              </form>

            </div>
            <!-- /SOCIAL LOGIN -->

          </div>


        </div>
      </section>
