<% content_for(:title) do %>
Par ici les nouvelles fraiches.
<% end %>
<section>
        <div class="container">

          <!-- FILTER -->
          <ul class="nav nav-pills mix-filter margin-bottom-30">
            <li data-filter="all" class="filter active"><a href="#">TOUT</a></li>
            <% @theme.each do |theme| %>
              <li data-filter="<%=theme%>" class="filter"><a href="#"><%=theme%></a></li>
              <%end%>
          </ul>
          <!-- /FILTER -->

          <div class="row mix-grid">

            <!-- LEFT COLUMNS -->
            <div class="col-md-9">

              <!-- TOGGLES -->
              <div class="toggle toggle-transparent toggle-bordered-simple">
              <% @faqs.each do |faq| %>
                <div class="toggle mix <%=faq.theme%>"><!-- toggle -->
                  <label><%=faq.question%></label>
                  <div class="toggle-content">
                    <p class="clearfix">
                     <%=faq.contenu%>
                    </p>
                  </div>
                </div>
                <%end%>
              </div>
              <!-- /TOGGLES -->
            </div>
            <!-- /LEFT COLUMNS -->

            <!-- RIGHT COLUMNS -->
            <div class="col-md-3">
              <!-- ASK A QUSTION -->
              <h4><strong>Poser</strong> une question</h4>
              <%=link_to "Contact", pages_contact_path, class: "btn-treehouse-small"%>
              <hr />
            </div>
            <!-- /RIGHT COLUMNS -->
          </div>
        </div>
      </section>
