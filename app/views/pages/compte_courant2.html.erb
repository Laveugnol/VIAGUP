<section>
  <div class = "container petit_fond">
    <%= simple_form_for(@viager, url: pages_assign_compte_path(@viager), html: { method: :patch }) do |f| %>
    <%= f.error_notification %>
    <div class="toggle toggle-transparent toggle-bordered-full">
      <div class="toggle active">
        <label>Updater le compte courant de <%=@viager.city%></label>
          <div class="toggle-content">
            <div class= "row">
              <div class = "col-xs-12 col-sm-6">
                <div class ="col-xs-6">
                  <p>Compte*</p>
                </div>
              <div class ="col-xs-6">
                <%= f.input :compte_courant , required: true, autofocus: true, label: false %>
                <%= f.input :compte_courant_cache, as: :hidden %>
              </div>
              <%= f.submit%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</section>
