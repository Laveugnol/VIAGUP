  <div class="container">
    <div class="text-center">
      <h3 class="size-30"><%= image_tag "77_Essential_Icons_Search.svg"%>Inspection de l'id et du justificatif  de <%= @user.investment_profile.nom + " " +  @user.investment_profile.prenom %></h3>
